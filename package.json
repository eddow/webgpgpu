{
	"name": "webgpgpu.ts",
	"version": "0.0.3",
	"scripts": {
		"test": "mocha",
		"test:karma": "karma start ./karma.conf.js --browsers ChromeGPU --single-run=false --auto-watch=true",
		"test:watch": "mocha watch",
		"build": "rollup -c",
		"watch": "rollup -c -w",
		"biome": "biome check --write",
		"lint": "biome check",
		"prepack": "npm run lint && npm run build",
		"pack:list": "npm pack --dry-run",
		"benchmark": "tsx tests/benchmark.ts",
		"tsx": "tsx tests/test.ts"
	},
	"keywords": ["webgpgpu", "gpu", "gpgpu", "webgpu", "typescript"],
	"main": "./lib/server.ts",
	"types": "./lib/server.d.ts",
	"exports": {
		"./biome": "./biome.json",
		".": {
			"browser": {
				"types": "./lib/client.d.ts",
				"import": "./lib/client.js",
				"require": "./lib/client.cjs"
			},
			"node": {
				"types": "./lib/server.d.ts",
				"import": "./lib/server.js",
				"require": "./lib/server.cjs"
			}
		},
		"./src": {
			"browser": "./src/client/index.ts",
			"node": "./src/server/index.ts"
		}
	},
	"imports": {
		"#webgpgpu": {
			"browser": "./src/client",
			"node": "./src/server",
			"default": "./src"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eddow/webgpgpu.git"
	},
	"description": "WebGPU computer-shader typed automation",
	"type": "module",
	"author": "Fran√ßois Marie <eeddow@gmail.com>",
	"license": "ISC",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@rollup/plugin-commonjs": "28.0.2",
		"@rollup/plugin-json": "6.1.0",
		"@rollup/plugin-node-resolve": "16.0.0",
		"@rollup/plugin-strip": "3.0.4",
		"@rollup/plugin-typescript": "^12.1.2",
		"@types/chai": "^4.3.4",
		"@types/karma-chai": "^0.1.7",
		"@types/mocha": "^10.0.1",
		"@types/node": "^18.11.13",
		"@types/websocket": "1.0.5",
		"@webgpu/types": "^0.1.54",
		"c8": "^10.1.3",
		"chai": "^4.3.7",
		"codecov": "3.8.3",
		"cross-env": "^7.0.3",
		"glob": "^11.0.1",
		"jsdom-global": "^3.0.2",
		"karma": "6.4.1",
		"karma-chai": "^0.1.0",
		"karma-chrome-launcher": "3.1.1",
		"karma-coverage-istanbul-reporter": "3.0.3",
		"karma-esbuild": "^2.3.0",
		"karma-firefox-launcher": "^2.1.3",
		"karma-mocha": "^2.0.1",
		"karma-mocha-reporter": "^2.2.5",
		"karma-rollup-preprocessor": "7.0.8",
		"karma-sourcemap-loader": "0.3.8",
		"mocha": "^10.2.0",
		"phantomjs-polyfill-object-assign": "0.0.2",
		"rollup": "4.34.8",
		"rollup-plugin-dts": "^6.1.1",
		"rollup-plugin-istanbul": "5.0.0",
		"rollup-plugin-node-builtins": "2.1.2",
		"sinon": "^19.0.2",
		"stream-browserify": "^3.0.0",
		"ts-node": "^10.9.2",
		"tslib": "2.8.1",
		"tsx": "^4.19.3",
		"typedoc": "0.27.9",
		"typescript": "5.7.3"
	},
	"dependencies": {
		"@petamoriken/float16": "^3.9.1",
		"webgpu": "^0.2.11"
	}
}
