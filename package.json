{
	"name": "webgpgpu.ts",
	"version": "0.0.1",
	"scripts": {
		"test": "mocha",
		"test:karma": "karma start --single-run --browsers ChromeHeadless karma.config.js",
		"test:watch": "mocha watch",
		"test:coverage": "c8 mocha",
		"build": "rollup -c",
		"watch": "rollup -c -w",
		"biome": "biome check --write",
		"lint": "biome check",
		"prepack": "npm run lint && npm run build",
		"pack:list": "npm pack --dry-run",
		"benchmark": "tsx tests/benchmark.ts"
	},
	"keywords": [
		"webgpgpu", "gpu", "gpgpu", "webgpu", "typescript"
	],
	"main": "./lib/server.ts",
	"types": "./lib/server.d.ts",
	"exports": {
		"./biome": "./biome.json",
		".": {
			"browser": {
				"types": "./lib/client.d.ts",
				"import": "./lib/client.js",
				"require": "./lib/client.cjs"
			},
			"node": {
				"types": "./lib/server.d.ts",
				"import": "./lib/server.js",
				"require": "./lib/server.cjs"
			}
		},
		"./src": {
			"browser": "./src/client.ts",
			"node": "./src/server.ts"
		}
	},
	"imports": {
		"#webgpgpu": {
			"browser": "./src/client",
			"node": "./src/server",
			"default": "./src"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eddow/webgpgpu.git"
	},
	"description": "WebGPU computer-shader typed automation",
	"type": "module",
	"author": "Fran√ßois Marie <eeddow@gmail.com>",
	"license": "ISC",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@rollup/plugin-commonjs": "^25.0.7",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-typescript": "^12.1.2",
		"@types/chai": "^5.0.1",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.13.5",
		"@webgpu/types": "^0.1.54",
		"c8": "^10.1.3",
		"chai": "^5.2.0",
		"cross-env": "^7.0.3",
		"jsdom-global": "^3.0.2",
		"karma": "^6.4.4",
		"karma-chai": "^0.1.0",
		"karma-chrome-launcher": "^3.2.0",
		"karma-esbuild": "^2.3.0",
		"karma-firefox-launcher": "^2.1.3",
		"karma-mocha": "^2.0.1",
		"karma-mocha-reporter": "^2.2.5",
		"mocha": "^10.2.0",
		"rollup": "^4.18.0",
		"rollup-plugin-dts": "^6.1.0",
		"sinon": "^19.0.2",
		"stream-browserify": "^3.0.0",
		"ts-node": "^10.9.2",
		"tslib": "^2.8.1",
		"tsx": "^4.19.3",
		"typescript": "^5.7.3"
	},
	"dependencies": {
		"@petamoriken/float16": "^3.9.1",
		"webgpu": "0.2.9"
	}
}
