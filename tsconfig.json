{
	"compilerOptions": {
		"module": "es2022",
		"moduleResolution": "node",
		"target": "ESNext",
		"outDir": "./dist",
		"composite": true,
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": false,
		"forceConsistentCasingInFileNames": true,
		"strictNullChecks": true,
		"strictBindCallApply": true,
		"baseUrl": ".",
		"noErrorTruncation": true,
		"noImplicitAny": true,
		"paths": {
			"webgpgpu": ["./src/server/index.ts"]
		},
		"types": ["@webgpu/types", "mocha", "node", "chai", "./chai-ext.d.ts"]
	},
	"include": ["./**/*.ts"]
}
