{
	"compilerOptions": {
		"module": "es2022",
		"moduleResolution": "node",
		"target": "ESNext",
		"lib": ["esnext", "DOM"],
		"declaration": false,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": false,
		"forceConsistentCasingInFileNames": true,
		"strictNullChecks": true,
		"strictBindCallApply": false,
		"baseUrl": "..",
		"paths": {
			"webgpgpu": ["../src/server"]
		},
		"types": ["@webgpu/types"]
	},
	"include": ["./**/*.test.ts"]
}
