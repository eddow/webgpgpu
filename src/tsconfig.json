{
	"compilerOptions": {
		"module": "es2022",
		"target": "ESNext",
		"moduleResolution": "node",
		"declaration": false,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": false,
		"forceConsistentCasingInFileNames": true,
		"strictNullChecks": true,
		"strictBindCallApply": true,
		"baseUrl": "..",
		"noImplicitAny": true,
		"types": ["@webgpu/types"]
	},
	"include": ["./**/*.ts"]
}
